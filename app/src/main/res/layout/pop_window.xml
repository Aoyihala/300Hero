<?xml version="1.0" encoding="utf-8"?>

<com.zhaoxing.view.sharpview.SharpLinearLayout app:backgroundColor="#fff"
    app:arrowDirection="top"
    app:radius="5dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:sharpSize="5dp"
    app:relativePosition="95%"
    android:orientation="vertical"
    android:layout_marginRight="10dp"
    android:gravity="center_horizontal"
    android:layout_width="wrap_content"
    android:maxHeight="270dp"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android">
        <android.support.v7.widget.RecyclerView
            android:layout_marginTop="7dp"
            android:id="@+id/recycler_user_history"
            android:layout_width="wrap_content"
            android:overScrollMode="never"
            android:layout_height="wrap_content">
        </android.support.v7.widget.RecyclerView>
        <View
            android:layout_marginTop="15dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:background="@color/ItemSpaceColor"
            android:layout_width="match_parent"
            android:layout_height="0.8dp"/>
        <LinearLayout
            android:orientation="horizontal"
            android:padding="5dp"
            android:layout_width="wrap_content"
            android:id="@+id/li_pop_add"
            android:gravity="center_vertical"
            android:layout_height="wrap_content">
            <ImageView
                android:background="@drawable/ic_add_black_24dp"
                android:layout_width="18dp"
                android:layout_height="18dp" />
            <TextView
                android:textColor="@color/black"
                android:textSize="12sp"
                android:text="@string/addrole"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <View
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:background="@color/ItemSpaceColor"
            android:layout_width="match_parent"
            android:layout_height="0.8dp"/>
        <LinearLayout
            android:padding="5dp"
            android:id="@+id/li_pop_setting"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageView
                android:background="@drawable/ic_settings_black_36dp"
                android:layout_width="18dp"
                android:layout_height="18dp" />
            <TextView
                android:layout_marginLeft="5dp"
                android:layout_width="wrap_content"
                android:text="@string/setting"
                android:textColor="@color/black"
                android:textSize="12sp"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </com.zhaoxing.view.sharpview.SharpLinearLayout>

