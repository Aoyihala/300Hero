<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:padding="5dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="wrap_content">
    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:padding="5dp"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_height="wrap_content">
        <net.wujingchao.android.view.SimpleTagImageView
            android:layout_width="40dp"
            app:simple_tag_width="10dp"
            app:simple_tag_orientation="right_bottom"
            app:simple_tag_textColor="#fff"
            app:simple_tag_textSize="8sp"
            app:simple_corner_distance="10dp"
            android:id="@+id/img_gaide_avator"
            app:simple_tag_enable="false"
            app:simple_tag_round_radius="5dp"
            app:simple_tag_background_color="@color/Red"
            android:layout_height="40dp" />
        <LinearLayout
            android:orientation="vertical"
            android:layout_marginLeft="5dp"
            android:layout_width="130dp"
            android:layout_height="wrap_content">
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:textSize="12sp"
                    android:textColor="@color/black"
                    android:id="@+id/tv_guaide_username"
                    android:text="本萌新不高兴了"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <ImageView
                    android:id="@+id/img_kill_all"
                    android:background="@drawable/sword"
                    android:layout_width="18dp"
                    android:visibility="invisible"
                    android:layout_height="18dp" />
            </LinearLayout>
            <TextView
                android:textSize="10sp"
                android:id="@+id/tv_guaide_userguaideinfo"
                android:text="12杀 1死 5助"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:text="我"
                android:textSize="10sp"
                android:id="@+id/tv_guaide_userguaide"
                android:textColor="@color/Red"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/img_guadie_userskill1"
                android:scaleType="centerCrop"
                android:layout_width="20dp"
                android:layout_height="20dp"
                />
            <ImageView
                android:id="@+id/img_guadie_userskill2"
                android:scaleType="centerCrop"
                android:layout_width="20dp"
                android:layout_height="20dp" />
        </LinearLayout>
        <android.support.v7.widget.RecyclerView
            android:id="@+id/recycler_equaipment"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        </android.support.v7.widget.RecyclerView>

    </LinearLayout>
    <View
        android:background="@color/ItemSpaceColor"
        android:layout_marginRight="15dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>
</LinearLayout>
