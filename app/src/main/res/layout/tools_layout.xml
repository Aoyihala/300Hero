<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@drawable/tool_shape"
    android:id="@+id/tools_bg"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:orientation="horizontal"
        android:id="@+id/tools_user_bg"
        android:background="@color/Yellow"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/img_tool_avator"
            android:layout_width="45dp"
            android:layout_margin="10dp"
            android:layout_height="45dp" />
        <LinearLayout
            android:orientation="vertical"
            android:gravity="center_vertical"
            android:paddingLeft="5dp"
            android:layout_gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:gravity="center_vertical"
                android:layout_gravity="center_vertical"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/tv_tool_name"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:paddingRight="5dp"
                    android:text="加载中"
                    android:textColor="#fff"
                    android:textSize="12sp" />
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:text="加载中"
                    android:textColor="#fff"
                    android:textSize="10sp"
                    android:id="@+id/tv_tool_userdes"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>
        </LinearLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView
                android:layout_width="25dp"
                android:layout_marginRight="10dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:id="@+id/img_tool_duanwei"
                android:layout_height="25dp" />
        </RelativeLayout>
    </LinearLayout>
    <ListView
        android:id="@+id/list_tool_listview"
        android:layout_width="match_parent"
        android:layout_weight="1"
        android:layout_height="match_parent">
    </ListView>
    <RelativeLayout
        android:orientation="horizontal"
        android:id="@+id/tool_foot_bg"
        android:background="@color/Yellow"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:text="距离上次刷新"
            android:textColor="#fff"
            android:padding="15dp"
            android:id="@+id/tv_tool_updatetime"
            android:layout_width="wrap_content"
            android:layout_centerVertical="true"
            android:layout_height="wrap_content" />
        <ImageView
            android:id="@+id/img_tool_refresh"
            android:layout_width="wrap_content"
            android:background="@drawable/ic_refresh_grey_500_24dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:layout_centerVertical="true"
            android:layout_height="wrap_content" />
    </RelativeLayout>
</LinearLayout>